<div class="col-md-3 mb-3">
    <div class="card custom-card">
        <div class="card-body">
            <h5 class="card-title">@cliente.Nome</h5>
            <p class="card-text">Data de Nascimento: @cliente.DataNascimento.ToShortDateString()</p>
            <p class="card-text">Ativo: @(cliente.ClienteAtivo ? "Sim" : "Não")</p>
            <div class="d-flex justify-content-between align-items-center mt-2">
                <a href='/editarcliente/@cliente.Id' class="btn btn-primary">Editar</a>
                <a href='/detalhescliente/@cliente.Id' class="btn btn-info">Ver Detalhes</a>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public required Cliente cliente { get; set; }
}